{% extends 'auth/auth.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block content %}
<div class="header animate-fadeInDown">
    <h2>Bienvenido<span style="color:#4da6ff;">.</span></h2>
    <p>No tienes una cuenta? <a href="{{ path('app_register') }}">Registrarme</a></p>
</div>

{# Mensaje si ya está logueado #}
{% if app.user %}
    <div class="div-info">
        Estás logueado como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
    </div>
{% endif %}

<form method="post" class="animate-fadeInUp">
    {# Error de login #}
    {% if error %}
        <div class="div-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    {% for message in app.flashes('success') %}
        <div class="div-success">{{ message }}</div>
    {% endfor %}

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <input type="hidden" name="csrf_token_id" value="{{ csrf_token('authenticate') }}">


    <div class="form-group">
        <input type="email" name="_username" placeholder="Email" value="{{ last_username }}" required autofocus>
        <i class="fa-solid fa-envelope"></i>
    </div>

    <div class="form-group">
        <input type="password" name="_password" placeholder="Contraseña" id="password" required>
        <i class="icon-password fa-regular fa-eye" id="togglePassword"></i>
    </div>

    {# CSRF protection #}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {# Futuro remember me #}
    {#
    <div class="form-group">
        <input type="checkbox" name="_remember_me" id="_remember_me">
        <label for="_remember_me">Recuérdame</label>
    </div>
    #}

    <div class="btns">
        <button type="submit" class="btn btn-create">Iniciar sesión</button>
    </div>
</form>
{% endblock %}
